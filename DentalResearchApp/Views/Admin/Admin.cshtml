@model DentalResearchApp.Models.InviteUserViewModel;

@{
    ViewBag.Title = "User Administration";
    Layout = "~/Views/_Layout.cshtml";
}

<html>
<head>
    <link rel="stylesheet" href="../css/3rdParty/bootstrap.min.css" />
    <script type="text/javascript" src="../js/3rdParty/jquery.min.js"></script>
    <script src="../js/3rdParty/bootstrap.min.js"></script>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="/css/Index.css" type="text/css" />

    <title>Dental Research App - User Administration</title>
</head>

<body>
    <div class="col-lg-12, col-md-12, col-xs-12">
        <h1 class="secondHeadline" style="text-align: center">User Administration</h1>
        <hr />
        @using (Html.BeginForm("SendSignupLink", "Link", FormMethod.Post))
        {
            <div class="col-lg-4, col-md-4, col-xs-3" style="text-align: right; margin-left: 82px">
                @Html.TextBoxFor(x => x.Email, "E-mail", new { @class = "form-control", @id = "email", @placeholder = "E-mail", @required = true, @type = "email", @maxlength = "60", @style = "width: 300px" })
            </div>
            <div class="col-lg-2, col-md-2, col-xs-2" style="text-align: center">
                <input type="submit" value="Send Invite" id="InviteUser" class="btn btn-primary">
            </div>
        }
    </div>
    <div class="col-lg-12, col-md-12, col-xs-12">
        <hr />
        <div class="col-lg-6, col-md-6, col-xs-6">
            <table class="customTable">
                <thead>
                    <tr>
                        <th class="customTh">Users</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.UserList)
                    {
                        <tr>
                            <td class="customTd">
                                <a>@item.FirstName @item.LastName - @item.Email</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <hr />
        </div>
        <div>
            @using (Html.BeginForm("ChangeUserRole", "Admin", FormMethod.Post))
            {
                <input type="submit" value="Change Role" id="ChangeUserRole" class="btn btn-primary">
            }
            <br />
            @using (Html.BeginForm("DeleteUser", "Admin", FormMethod.Post))
            {
                <input type="submit" value="Delete User" id="DeleteUser" class="btn btn-danger">
            }
        </div>
    </div>
</body>
</html>