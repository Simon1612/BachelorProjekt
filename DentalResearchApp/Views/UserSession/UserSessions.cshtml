@model DentalResearchApp.Models.UserSessionsViewModel
@{
    ViewData["Title"] = "UserSessions";
    Layout = "~/Views/_Layout.cshtml";
}

<html>

<head>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="../css/3rdParty/bootstrap.min.css" />
    <script type="text/javascript" src="../js/3rdParty/jquery.min.js"></script>
    <script src="../js/3rdParty/bootstrap.min.js"></script>

    <link rel="stylesheet" href="/css/Index.css" type="text/css" />
    <title>Dental Research App</title>
</head>


<body>
    <div class="col-lg-12, col-md-12, col-xs-12">
        <h1 class="secondHeadline" style="text-align: center">User Sessions</h1>
        
        <h3 style="text-align: center">
            Study Name: @Model.StudyName
        </h3>
        <h3 style="text-align: center; margin-top: 0px">
            ParticipantId: @Model.ParticipantId
        </h3>
        <hr />
        <table class="customTable">
            <thead>
                <tr>
                    <th class="customTh">
                        Sessions
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.SessionNames)
                {
                    <tr>
                        <td class="customTd">
                            @Html.ActionLink(item, "UserSessionDetailsModal", "UserSession", new { studyId = Model.StudyName, sessionName = item, studyName = Model.StudyName }, new { @class = "UserSessionDetails-modal" })
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
    <div class="modal fade text-center" id="UserSessionDetailsModal" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
            </div>
        </div>
    </div>


    <script type="text/javascript">
        $('.UserSessionDetails-modal').on('click', function (e) {
            e.preventDefault();

            $('#UserSessionDetailsModal').modal('show').find('.modal-content').load($(this).attr('href'));
        });
    </script>
</body>

</html>