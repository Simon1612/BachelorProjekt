@using Microsoft.AspNetCore.Rewrite.Internal.UrlActions
<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@ViewBag.Title</title>

    <link rel="stylesheet" href="/css/Index.css">

   </head>
<body>
    <div class="wrapper">
        <nav id="sidebar">
            <div class="sidebar-header" style="text-align: center">
                <h3>Tandlægehøjskolen Aarhus</h3>
            </div>
            <ul class="list-unstyled components">
                <p>Dental Research App</p>
                <li class="active">
                    <a href="#surveySubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">Surveys <span class="caret"></span></a>
                    <ul class="collapse list-unstyled" id="surveySubmenu">
                        <li>
                            <a href="#">Survey</a>
                        </li>
                        <li>
                            <a href="#">All Surveys</a>
                        </li>
                        <li>
                            <a href="#">All CRF's</a>
                        </li>
                    </ul>
                </li>
                <li>
                    <a href="#">Results</a>
                </li>
                <li>
                    @Html.ActionLink("Send Survey", "SendSurvey", "Link")
                </li>
                <li>
                    <a href="#patientsSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">Patients <span class="caret"></span></a>
                    <ul class="collapse list-unstyled" id="patientsSubmenu">
                        <li>
                            <a href="#">All Patients</a>
                        </li>
                    </ul>
                </li>
                <li>
                </li>
                <li>
                    <a href="#">The Magnificent Pain-O-Meter!!</a>
                </li>
            </ul>
        </nav>
        <div id="content" style="width:inherit; height:inherit">
            @RenderBody()
        </div>
    </div>
</body>
</html>
