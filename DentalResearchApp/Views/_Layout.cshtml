@using Microsoft.AspNetCore.Rewrite.Internal.UrlActions
<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@ViewBag.Title</title>

    <link rel="stylesheet" href="/css/Index.css">

   </head>
<body>
    <div class="wrapper">
        <nav id="sidebar">
            <div class="" style="text-align: center">
                <h4>Tandlægehøjskolen Aarhus</h4>
            </div>
            <hr/>
            <ul class="list-unstyled">
                <li>
                    @Html.ActionLink("Home", "Index", "Survey")
                </li>
            </ul>
            <hr/>
            <ul class="list-unstyled">
                    <li>
                    <a href="#surveySubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">Surveys <span class="caret"></span></a>
                    <ul class="collapse list-unstyled" id="surveySubmenu">
                        <li>
                            @Html.ActionLink("All Results", "SurveyResults", "Survey")
                            @Html.ActionLink("Survey Editor", "Editor", "Editor")
                            @Html.ActionLink("Send Survey", "SendSurvey", "Link")
                        </li>
                    </ul>
                </li>
            </ul>
            <hr/>
            <ul class="list-unstyled">
                <li>
                    @Html.ActionLink("All Studies", "Studies", "Study")
                </li>
                <li>
                    @Html.ActionLink("All Patients", "Patients", "Patient")
                </li>
            </ul>
            <hr/>
            <ul class="list-unstyled">
                <li>
                    @Html.ActionLink("Profile", "Profile", "User")
                </li>
                @if(Context.User.IsInRole("Administrator")) //Todo: User-Role skal findes, laver admin tjek for navbar
                {
                <li>
                    @Html.ActionLink("Admin", "Admin", "User")
                </li>
                }
            </ul>
        </nav>
        <div id="content" style="width:inherit; height:inherit">
            @RenderBody()
        </div>
    </div>
</body>
</html>
