@using DentalResearchApp.Models
@model SendSurveyModel
@{
    Layout = "~/Views/_Layout.cshtml";
    ViewBag.Title = "Dental Research App";
}

<html>
<head>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="~/css/3rdParty/bootstrap.min.css" />
    <script type="text/javascript" src="~/js/3rdParty/jquery.min.js"></script>
    <script src="~/js/3rdParty/bootstrap.min.js"></script>
    <link rel="stylesheet" href="~/css/Index.css" type="text/css">
    <title>Dental Research App - Send Survey</title>
</head>
<body>
<div class="box">
    <h2 class="secondHeadline" style="text-align: center">Send Survey</h2>
    <hr/>
    <br/>
    @using (Html.BeginForm("SendSurveyLink", "Link", FormMethod.Post))
    {
        <div style="text-align: center" class="form-group">
            <div class="col-lg-1 col-md-1 col-sm-1" style="text-align: left"></div>
            <div class="col-lg-3 col-md-3 col-sm-3" style="text-align: left">
                @Html.LabelFor(x => x.Studies, "Select a Study: ")

            </div>
            <div class="col-lg-8 col-md-8 col-sm-8" style="text-align: left">
                @Html.DropDownListFor(x => x.Studies, new SelectList(Model.Studies), new { @class = "inputField form-control", @id = "studies", @required = false, style = "width: 350px" })
            </div>
            <hr/>
            <div class="col-lg-1 col-md-1 col-sm-1" style="text-align: left"></div>
            <div class="col-lg-3 col-md-3 col-sm-3" style="text-align: left">
                @Html.LabelFor(x => x.Patients, "Select Volunteers: ")
            </div>
            <div class="col-lg-8 col-md-8 col-sm-8" style="text-align: left">
                @Html.ListBox("Patients List", new MultiSelectList(Model.Patients), new {@class = "inputField form-control", @ShowCheckbox = true, @Multiple = "Multiple", style = "width: 350px"})
            </div>
            <hr/>
            <div class="col-lg-1 col-md-1 col-sm-1" style="text-align: left"></div>
            <div class="col-lg-3 col-md-3 col-sm-3" style="text-align: left">
                @Html.LabelFor(x => x.Survey, "Select a Survey: ")
            </div>
            <hr/>
            <div class="col-lg-8 col-md-8 col-sm-8" style="text-align: left">
                @Html.DropDownListFor(x => x.Survey, new SelectList(Model.Survey), new {@class = "inputField form-control", @id = "SurveyName", @required = true, style = "width: 350px"})
            </div>
            <hr/>
            <input type="submit" , value="Send Links" class="btn btn-success form-group"/>
        </div>
    }
</div>
</body>
</html>
